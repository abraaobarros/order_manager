<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- the theme applied to the application or activity -->
    <style name="ActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/CustomActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/wba_dark_grey</item>

        <!-- Support library compatibility -->
        <item name="background">@color/wba_dark_grey</item>
    </style>
</resources>