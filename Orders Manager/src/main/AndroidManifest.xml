<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.holandago.wbamanager" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActionBarTheme" >
        <receiver android:name=".library.NetworkStateReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ordersmanager.OperationsList"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ordersmanager.DisplayLotsActivity"
            android:label="@string/title_activity_display_lots"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ordersmanager.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ordersmanager.DisplayOperationActivity"
            android:label="@string/title_activity_display_operation"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" >
        </activity>
        <activity
            android:name=".ordersmanager.UpdatesActivity"
            android:label="@string/title_activity_updates"
            android:parentActivityName=".ordersmanager.OperationsList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.holandago.wbamanager.ordersmanager.OperationsList" />
        </activity>
    </application>

</manifest>
